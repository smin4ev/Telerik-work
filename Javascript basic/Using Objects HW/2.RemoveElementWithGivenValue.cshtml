            //Attach it to the array type
            //Read about prototype and how to attach methods

            Array.prototype.remove = function (elementForRemoving) {

                var arrayAfterRemovingElement = [];
                for (var i = 0; i < this.length; i++) {
                    if (this[i] !== elementForRemoving) {
                        arrayAfterRemovingElement.push(this[i]);
                    }
                }
                return arrayAfterRemovingElement;
            }

            var array = [1, 2, 1, 4, 1, 3, 4, 1, 111, 3, 2, 1, "1"];
