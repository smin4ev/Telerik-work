<!DOCTYPE html>
<html>
    <head>
        <title>Exchange Values</title>
    </head>
    <body>
        <div id="js-console">
            <div>
                <label for="firstNum">Enter first number:</label>
                <input type="text" id="firstNum" />
            </div>
            <div>
                <label for="secondNum">Enter second number:</label>
                <input type="text" id="secondNum" />
            </div>
            <div>
                <label>Click the button to see the result</label>
                <input type="button" value="Check" onclick="valueExchange()" />
            </div>
        </div>
         <script src="scripts/js-console.js"></script>
        <script>
            //1.Write an if statement that examines two integer variables and exchanges their values if the 
            //first one is greater than the second one.
            function valueExchange() {
                var firstNumber = jsConsole.readFloat("#firstNum");
                var secondNumber = jsConsole.readFloat("#secondNum");
                if (firstNumber <= secondNumber) {
                    jsConsole.writeLine("First number isn't greater than the second number");
                }
                else {
                    var temp = secondNumber;
                    secondNumber = firstNumber;
                    firstNumber = temp;
                    jsConsole.writeLine('Value of first number became ' + firstNumber);
                    jsConsole.writeLine('Value of second number became ' + secondNumber);
                }
            }
        </script>
    </body>
</html>
